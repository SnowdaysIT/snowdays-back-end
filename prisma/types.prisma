type Profile{
  id: ID! @id
  first_name: String!
  last_name: String!
  university: University! @relation(link: INLINE, name: "ContactPersonProfile" )
  phone_number: String! @unique
  badge_number: String!
  gender: GenderType!
  food_allergies: String!
  height: Float
  weight: Float
  shoe_size: String
  activity: [Activity] 
  accomodation: Accomodation @relation(link: INLINE, name: "ProfileHost")
}

enum GenderType {
  MALE
  FEMALE
}

type User {
  id: ID! @id 
  profile: Profile @relation(link: INLINE)
  email: String! @unique
  password: String!
}

type Role{
  id: ID! @id
  name: String
  permission: [Permission]
}

type Permission{
  id: ID! @id
  role: User 
  action: String
  resources: String
  domain: String
}

type University{
  id: ID! @id 
  contact_person: Profile @relation(name: "ContactPersonProfile" )
  address: String
  name: String! 
}

type Activity{
  id: ID! @id
  name: String 
  date_of_activity: DateTime
}

type Accomodation{
  id: ID! @id 
  address: String!
  host: Profile @relation(name: "ProfileHost")
  phone_number: String! @unique
}